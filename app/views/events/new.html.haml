= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'

%h1 New Event
= form_for :event, url: events_path do |f|

  = f.label :event_name, 'Name'
  = f.text_field :event_name
  %br/

  = f.label :description
  = f.text_area :description
  %br/

  = f.label :community, 'Community'
  = collection_select(:event, :community_id, Community.all, :id, :com_name)

  = f.submit 'Create Event'

:javascript
    $(document).ready(function() {
      $('#event_community_id').prepend('<option selected="selected">- Select a Community -</option>');
    });
